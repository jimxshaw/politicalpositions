<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/md_keylines"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/fragment_issue_list_item_icon"
        android:layout_width="@dimen/list_issue_icon_size"
        android:layout_height="@dimen/list_issue_icon_size"
        android:contentDescription="icon"
        android:src="@drawable/ic_issues_foreign_policy"/>

    <TextView
        android:id="@+id/fragment_issue_list_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_issue_margin_left"
        android:layout_marginTop="@dimen/list_issue_margin_top"
        android:layout_marginBottom="@dimen/list_issue_margin_bottom"
        android:layout_toRightOf="@id/fragment_issue_list_item_icon"
        android:textAppearance="?attr/textAppearanceListItem"
        android:text="Issue Title"
        android:textSize="@dimen/list_issue_text_size"/>

</RelativeLayout>