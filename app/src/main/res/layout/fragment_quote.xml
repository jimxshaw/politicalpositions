<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fragment_quote_card_view_height"
    android:layout_gravity="center"
    android:foreground="?attr/selectableItemBackground"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fragment_quote_card_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_quote_card_image_height"
            android:layout_margin="@dimen/md_keylines"
            android:scaleType="centerCrop"
            android:src="@drawable/img_sanders"/>

        <TextView
            android:id="@+id/fragment_quote_card_candidate"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignTop="@id/fragment_quote_card_image"
            android:layout_alignBottom="@id/fragment_quote_card_image"
            android:layout_alignLeft="@id/fragment_quote_card_image"
            android:layout_alignRight="@id/fragment_quote_card_image"
            android:layout_margin="1dp"
            android:textStyle="bold"
            android:textSize="50dp"
            android:gravity="center"
            android:text="CANDIDATE"
            android:textColor="@color/colorAccent"
            android:shadowColor="#FFFFFF"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="7.5"/>

        <TextView
            android:id="@+id/fragment_quote_card_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_quote_card_image"
            android:layout_marginTop="@dimen/md_keylines"
            android:layout_marginBottom="@dimen/md_keylines"
            android:layout_marginLeft="@dimen/md_keylines"
            android:layout_marginRight="@dimen/md_keylines"
            android:text="THIS IS THE QUOTE!!!!"
            android:ellipsize="end"
            android:singleLine="false"
            android:scrollHorizontally="false"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/fragment_quote_card_text"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/fragment_quote_card_text"
            android:gravity="center">

            <TextView
                android:id="@+id/fragment_quote_card_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/md_keylines"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:layout_alignParentLeft="true"
                android:text="@string/issue_quote_source_label"/>

            <TextView
                android:id="@+id/fragment_quote_card_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/md_keylines"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:layout_alignParentRight="true"
                android:text="@string/issue_quote_date_label" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>



